/*height 154rpx
154=42+10+42+60*/

.location-wrapper{
  margin-bottom: 60rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  color: rgba(0, 0, 0, 0.5)
}

.location{
  display: flex;
  justify-content: center;
  align-items: center;
}

.location-icon{
  margin-right: 10rpx;
  width: 21rpx;
  height:30rpx;
}

.location-tips{
  margin-top: 10rpx;
  text-align:center;
  height: 42rpx;
}

.temp {
   font-size: 200rpx;
   text-align: center;
   opacity: 0.8;
   line-height: 280rpx;
}

.weather{
  text-align: center;
  font-size: 40rpx;
  line-height: 56rpx;
  opacity: 0.65;
}

.background{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.futuretips{
  display: flex;
  padding-top: 40rpx;
  justify-content: center; /*视图居中*/
  align-content: center;
}

.future-text{
  font-size: 30rpx; /* 控制字体大小 */
  line-height:  42rpx; /* 控制行高 */
  opacity: 0.5;
}

.future-ico{
  margin-right: 10rpx; /* 控制距离右侧 */
  width:36rpx;
  height: 28rpx
}

.future-weather-list{
  display:flex;/*横向放置*/
}

.future-weather-item{
  display:flex;
  width: 120rpx;/*设置宽度*/
  flex-shrink: 0; /* 不压缩页面 */
  flex-direction: column;
  align-items: center; /* 下属项目对齐 */
}

.forecast-time{
  font-size: 30rpx;
  line-height: 42rpx;
}

.forecast-icon{
  margin-top:50rpx;
  width: 60rpx;
  height: 60rpx;
}
.forecast-temp{
  margin-top:46rpx;
  font-size:40rpx;
  line-height: 56rpx;
}

.today{
  display: flex;
  align-items: center;
  position: absolute;
  bottom: 0;
  left: 40rpx;
  right: 40rpx;
  height: 90rpx;
  border-top: 1px solid rgba(0,0,0,0.1);/*增加横线 ,1px粗*/
  font-size: 30rpx;
  line-height: 42rpx;
  color: rgba(0, 0, 0, 0.5);
}

.today-temp{
  flex-grow: 1;
  padding-right: 30rpx;
  text-align: right;
}

.arrow-icon{
  width: 13rpx;
  height:24rpx;
}

